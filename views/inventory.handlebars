<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Main Effect</th>
            <th scope="col">Major Effect</th>
            <th scope="col">Minor Effect</th>
            <th scope="col">Item Type</th>
            <th scope="col">Caps Value</th>
            {{!-- <th scope="col">Username</th> --}}
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#if weapons.length}}
            {{#each weapons as |weapon|}}
                <tr>
                    <td>{{mainEffect}}</td>
                    <td>{{majorEffect}}</td>
                    <td>{{minorEffect}}</td>
                    <td>{{itemType}}</td>
                    <td>{{capsValue}}</td>
                    {{!-- <td>{{user.username}}</td> --}}
                    <td><button type="button" class="btn btn-sm btn-outline-warning deleteBtn" data-id={{id}} data-type="weapons">Delete</button></td>
                </tr>
            {{/each}}
        {{else}}
        <div class="container-fluid">
                <div class="row justify-content-around">
                    <div class="col-md-4 mx-auto pb-2" id="no-item">
                        <a href="/dashboard/add-weapon#w-form" class="d-flex justify-content-center btn btn-outline-warning rounded-pill">You do not currently have any weapons. </a>
                    </div>
                    {{/if}}
                    {{#if armor.length}}
                    {{else}}
                    <div class="col-md-4 mx-auto pb-2" id="no-item">
                        <a href="/dashboard/add-armor#a-form" class="d-flex justify-content-center btn btn-outline-warning rounded-pill">You do not currently have any armor. </a>
                    </div>
                    {{/if}}
                </div>
        </div>

        {{#if armor.length}}
            {{#each armor}}
                <tr>
                    <td>{{mainEffect}}</td>
                    <td>{{majorEffect}}</td>
                    <td>{{minorEffect}}</td>
                    <td>{{itemType}}</td>
                    <td>{{capsValue}}</td>
                    {{!-- <td>{{user.username}}</td> --}}
                    <td><button type="button" class="btn btn-sm btn-outline-warning deleteBtn" data-id={{id}} data-type="armor">Delete</button></td>
                </tr>
            {{/each}}
        {{/if}}
    </tbody>
</table>

<script src="/js/delete.js"></script>