<div class="container-fluid">
    <div class="row">
      <div class="col col-md-3" id="vaultboy">
          <div class="row">
            <div class="d-flex justify-content-center">
                <img src="/images/vaultboy.jpg" class="img-fluid w-50 vaultboy">   
            </div>
          </div>

      </div>

        <div class="col-md-5 text-light align-self-center animate__animated animate__fadeIn animate__fast">
            <div class="container h-100">
                <div class="row h-100">
                    <div class="col-sm-10 col-md-8 mx-auto d-table h-100">
                        <div class="d-table-cell align-middle">

                            <div class="text-center mt-2">
                                <h2>Sign Up</h2><hr>
                                <p class="">
                                    Start trading with the Fallout 76 Central Market today.
                                </p>
                            </div>

                            <div class="card bg-dark">
                                <div class="card-body">
                                    <div class="mt-sm-4 mx-sm-4">
                                        <form class="signup-form" id="s-form">
                                            <div class="form-group pb-3">
                                                <label for="email-signup" class="text-light">Email:</label>
                                                <input class="form-control form-control-lg entry-field" type="email" name="email" placeholder="Enter your email" id="email-signup">
                                            </div>
                                            <div class="form-group pb-3">
                                                <label for="username-signup" class="text-light">Username:</label>
                                                <input class="form-control form-control-lg entry-field" type="text" name="name" placeholder="Enter your username" id="username-signup">
                                            </div>                                        
                                            <div class="form-group">
                                                <label for="password-signup" class="text-light">Password:</label>
                                                <input class="form-control form-control-lg entry-field" type="password" name="password" placeholder="Enter password" id="password-signup">
                                            </div>
                                            <div class="form-group pt-3">
                                                <label for="platform-signup">Choose your platform:</label>
                                                <select class="form-control form-control-lg entry-field" id="platform-signup" name="Platform">
                                                    <option value="XBox">XBox</option>
                                                    <option value="Playstation">Playstation</option>
                                                    <option value="PC">PC</option>
                                                </select>
                                            </div>
                                            <div class="text-center mt-3">
                                                <button type="submit" class="btn-warning btn-lg login-signup-btn">Sign Up!</button>
                                                <p class="pt-2"> or </p>
                                                <a href="/login#l-form" class="login-link"><button type="button" class="btn-primary">Log in instead</button></a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/signup.js"></script>